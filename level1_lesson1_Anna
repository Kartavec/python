package Lesson_1;

import java.util.Scanner;

public class lesson1 {

    byte by = -127;
    short sh = 32767;
    char ch = 'c';
    int it = 2147483647;
    long lg = 9223372036854775807L;
    float fl = 38.4f;
    double db = 6.66;
    boolean bol = true;

    public static void main(String[] args) {
        getMathExpression(1, 2.5, 3.9, 5);
        getHitRange(10.5, 10);
        getPossitivOrNegative(0);
        getTrueNegative(-1);
        getHello("Аня");
        getStatusYear(2400);
    }

    public static void getMathExpression(double a, double b, double c, double d) {
        double result = a * ( b + ( c / d ) );
        System.out.println("Результат вычисления: " + result);
    }

    public static void getHitRange(double a, double b) {
        double sum = a + b;
        if (sum >= 10 && sum <= 20)
            System.out.println(true);
        else
            System.out.println(false);
    }

    public static void getPossitivOrNegative(int a) {
        if (a >= 0) System.out.println("Введенное число положительное");
        else System.out.println("Введенное число отрицательное");

    }

    public static void getTrueNegative(int a) {
        if (a < 0) System.out.println(true);
        else return;
    }

    public static void getHello(String a) {
        System.out.println("Привет, " + a);
    }

    public static void getStatusYear(int a) {
        if (a%4 == 0 && a%400 == 0) System.out.println("Високосный год");
        else System.out.println("Не високосный год");
    }
    }
